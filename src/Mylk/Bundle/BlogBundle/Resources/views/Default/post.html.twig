{% form_theme comment_form "MylkBlogBundle:Default:captcha.html.twig" %}

<article>
    <div class="post-header">
        <h1 class="post-title"><a href="{{ path('post', { postid: post.id }) }}">{{ post.title }}</a></h1>
        <div class="post-info">
            {% if post.sticky %}
                <img src="{{ asset('/img/sticky.png') }}" />
            {% endif %}
            Posted on {{ post.createdAt }} by <a href="mailto:{{ post.createdBy.email }}">{{ post.createdBy.username }}</a><br />
            {% if post.updatedAt is not null and post.updatedBy is not null %}
                Last updated on {{ post.createdAt }} by <a href="mailto:{{ post.createdBy.email }}">{{ post.createdBy.username }}</a>
            {% endif %}
        </div>
    </div>

    <div class="post-content">
        <p>
            {{ post.content | raw }}
        </p>
    </div>

    <div class="post-info">
        Category: <a href="{{ path('category', { categoryid: post.category.id }) }}">{{ post.category.title }}</a>
        {% if post.tags | length > 0 %}
        |
        Tags:
        {% for tag in post.tags %}
        <a href="{{ path('tag', { tagid: tag.id }) }}">{{ tag.title }}</a>
        {% endfor %}
        {% endif %}
        |
        <a href="{{ path('post', { postid: post.id }) }}#post-comments">Comments {{ post.comments | length }}</a>
    </div>

    <a name="post-comments"></a>
    <div class="post-comments">
        <h3>Comments</h3>
        
        {% for comment in comments %}
        <div>
            <div>
                <div class="comment-info">Posted on {{ comment.createdAt }} by <a href="mailto:{{ comment.email }}">{{ comment.username }}</a></div>
            </div>

            <div>
                <p>{{ comment.content }}</p>
            </div>
        </div>
        {% endfor %}
        <br />

        {{ include("MylkBlogBundle:Default:commentForm.html.twig", {"post": post}) }}
    </div>
</article>