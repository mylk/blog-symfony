{% extends "MylkBlogBundle:Admin:index.html.twig" %}

{% block content %}
    {{ form_start(form, { "attr": { "novalidate": "novalidate" }}) }}

    {% if form_errors(form) %}
        <div class="alert-error">{{ form_errors(form) }}</div>
    {% endif %}
        
    {% for error in app.session.flashbag.get("error") %}
        <div class="alert-error">
            {{ error }}
        </div>
    {% endfor %}
        
    {% for success in app.session.flashbag.get("success") %}
        <div class="alert-success">
            {{ success }}
        </div>
    {% endfor %}
        
    <table>
        <tr>
            <td>{{ form_label(form.title) }}</td>
            <td>{{ form_widget(form.title) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.content) }}</td>
            <td>{{ form_widget(form.content) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.category) }}</td>
            <td>{{ form_widget(form.category) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.tags) }}</td>
            <td>{{ form_widget(form.tags) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.sticky) }}</td>
            <td>{{ form_widget(form.sticky) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.commentsClosed) }}</td>
            <td>{{ form_widget(form.commentsClosed) }}</td>
        </tr>
        <tr>
            <td colspan="2" align="right">{{ form_widget(form.save) }}</td>
        </tr>
        <tr style="display:none">
            <td colspan="2">{{ form_rest(form) }}</td>
        </tr>
    </table>
{% endblock %}